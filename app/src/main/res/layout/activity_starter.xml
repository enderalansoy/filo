<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >
    //tools:context=".MainActivity"


    <TextView
        android:id="@+id/baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLEET MANAGEMENT SYSTEM"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#DF0000"
        android:layout_marginBottom="20dp"
        />


    <ScrollView
        android:layout_below="@+id/baslik"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--android:layout_below="@+id/baslik"-->
            <TextView
                android:text="Accelerator Pedal Position:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/accelerator"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/anihiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudden Acceleration:"
                android:layout_below="@+id/accelerator"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/anifren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudden Braking:"
                android:layout_below="@+id/anihiz"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="Engine Speed:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/anifren"
                android:id="@+id/engine_speed"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Vehicle Speed:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engine_speed"
                android:id="@+id/vehicle_speed"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Fuel Level:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_speed"
                android:id="@+id/fuel_level"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Odometer:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fuel_level"
                android:id="@+id/odometer"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Fuel Consumed Since Restarted:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odometer"
                android:id="@+id/fuel_consumed_since_restarted"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Torque At Transmission:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fuel_consumed_since_restarted"
                android:id="@+id/torque_at_transmission"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Transmission Gear:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/torque_at_transmission"
                android:id="@+id/transmission_gear"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Longitude:"
                android:id="@+id/longitarac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transmission_gear"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Latitude:"
                android:id="@+id/latitarac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/longitarac"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Windshield Viper Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/latitarac"
                android:id="@+id/windshield_viper_status"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Break Pedal Percentage:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/windshield_viper_status"
                android:id="@+id/break_pedal_percertage"
                android:layout_marginBottom="10dp" />

            <TextView
                android:text="Steering Wheel Angle:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/break_pedal_percertage"
                android:id="@+id/steering_wheel_angle"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Ignition Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/steering_wheel_angle"
                android:id="@+id/ignition_status"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>